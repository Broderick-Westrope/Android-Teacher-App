<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.broderickwestrope.whiteboard">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_circle"
        android:supportsRtl="true"
        android:theme="@style/Theme.DoIt">
        <activity android:name="com.broderickwestrope.whiteboard.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.broderickwestrope.whiteboard.MainActivity" />
    </application>

</manifest>