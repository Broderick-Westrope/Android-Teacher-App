<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grandis">

    <EditText
        android:id="@+id/newTaskTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/changeTitleTxt"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="@null"
        android:hint="Name/Description"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/mirage2"
        android:textColorHint="@color/hoki" />

    <EditText
        android:id="@+id/newTaskLocTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="100dp"
        android:background="@null"
        android:hint="Location"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/mirage2"
        android:textColorHint="@color/hoki" />

    <Button
        android:id="@+id/saveTaskBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTaskTxt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:enabled="false"
        android:text="Save"
        android:textColor="@android:color/darker_gray"
        android:textSize="16dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/newTaskTxt"
        android:layout_marginTop="3dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/changeTitleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="New Task:"
        android:textColor="@color/mirage"
        android:textSize="30sp"
        android:textStyle="bold" />
</RelativeLayout>