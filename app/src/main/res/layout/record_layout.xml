<!-- This is how we represent a card (a task) on our main activity -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <!--  This is the content container of our card  -->
    <RelativeLayout
        android:id="@+id/layoutCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/muave"
        android:padding="8dp">

        <!--    Row 1    -->

        <TextView
            android:id="@+id/record_StudentID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/monolisa_regular"
            android:paddingStart="10dp"
            android:textColor="@color/mirage"
            tool:text="20453565" />

        <TextView
            android:id="@+id/record_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/record_StudentID"
            android:fontFamily="@font/monolisa_regular"
            android:paddingStart="10dp"
            android:textColor="@color/mirage"
            tool:text="Broderick Westrope" />

        <TextView
            android:id="@+id/record_Age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/monolisa_regular"
            android:paddingStart="10dp"
            android:textColor="@color/mirage"
            tool:text="17" />

        <!--    Row 2    -->

        <TextView
            android:id="@+id/record_Course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/record_StudentID"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/monolisa_regular"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Bachelor of Computer Science"
            android:textColor="@color/mirage2"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/record_Gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/record_Age"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/monolisa_regular"
            android:paddingStart="10dp"
            android:textColor="@color/mirage"
            tool:text="Male" />

        <!--    Row 3    -->

        <TextView
            android:id="@+id/record_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/record_Course"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/monolisa_regular"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="47 Atlantic Boulevard, Elderslie, NSW"
            android:textColor="@color/mirage2"
            android:textSize="12sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
